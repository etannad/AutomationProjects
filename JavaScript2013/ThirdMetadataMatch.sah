			_click($vlmetadata);
			_wait(1000);
			
 			if(!_exists($ssignnamecast))
			{
		 		_takeSnapShots(true);
			}
			_continueOnError();
			
			$cast1 = _getValue(_textbox("content[cast_crews_attributes][0][crew_name]"));
			$cast1field = _getValue(_textbox(24));
			
			if ($cast1field == "Actor")
			//add the cast crew 
			{
